@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Welcome to Shadow Wizard Math</p>
    <h1>Practice math by vanquishing your foes!</h1>
    <img src="~/art/Title%20and%20Level%20Select/Title_Screen.png" alt="Logo" style="width: 500px; height: 300px;" onclick="submitForm()">
    <form id="startGameForm" method="post" action="@Url.Action("LevelView", "Home")">
        <label for="playerName">Enter your name:</label>
        <input type="text" id="playerName" name="playerName" value="Player 1" required>
        <br>
    </form>
</div>

<script>
    function submitForm() {
        document.getElementById("startGameForm").submit();
    }
</script>